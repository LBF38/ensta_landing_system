	<system>// Instanciations of templates

// LIGHTS
chan activate_red, deactivate_red;
chan activate_orange, deactivate_orange;
chan activate_green, deactivate_green;

redLight = light(activate_red, deactivate_red);
orangeLight = light(activate_orange, deactivate_orange);
greenLight = light(activate_green, deactivate_green);

// EVs
broadcast chan activate_ev_gen, gen_pressure;
broadcast chan activate_ev_cd, cd_pressure;

ev_general = EV_gen(activate_ev_gen, gen_pressure);
ev_closedoors = EV(activate_ev_cd, gen_pressure, cd_pressure);
//ev_opendoors = EV();
//ev_retractgears = EV();
//ev_extendgears = EV();

// PILOT
broadcast chan handle;

a_pilot = pilot(handle);

// Analog Switch
bool io_state;

analog_switch = AnalogSwitch(handle,io_state);

// Sensors
bool is_up;
bool is_opened;
bool is_gen_pressurized;

handle_sensor = Sensor(is_up, handle);
as_sensor = Sensor(is_opened, handle);
gen_pressure_sensor = Sensor(is_gen_pressurized,gen_pressure);

// Electrical orders
elec_order_ev_gen = Electrical_order(activate_ev_gen, io_state);
elec_order_ev_cd = Electrical_order(activate_ev_cd,is_gen_pressurized);

// List one or more processes to be composed into a system.
system a_pilot, redLight, orangeLight, greenLight, ev_general,ev_closedoors,analog_switch,handle_sensor,as_sensor,gen_pressure_sensor,elec_order_ev_gen,elec_order_ev_cd;
</system>
